<div class='flex items-center justify-center bg-gray-50 pt-4'>
<p class='p-4 bg-yellow-100 rounded-xl drop-shadow-md border border-gray-200'>
  <%= t('.under_construction') %>
</p>
</div>

<div class='absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 p-12 bg-gray-50 rounded-xl drop-shadow-md border border-gray-200'>
  <h1 class='text-xl text-center pb-6'><%= t('devise.shared.log_in') %></h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <div class='field'>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'my-2 w-full p-1 border border-gray-300 rounded-md' %>
    </div>

    <div class='field'>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'my-2 w-full p-1 border border-gray-300 rounded-md' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class='actions mb-6'>
      <%= f.submit t('devise.shared.log_in'), class: 'container py-2 px-4 bg-teal-600 text-white rounded-md w-full mt-4' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
