<div class="text-center text-white">
  <%- if controller_name != 'sessions' %>
    <%= link_to t('devise.shared.log_in'), new_session_path(resource_name), class: 'py-2 px-4 bg-green-600 rounded-md w-full my-2 block' %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t('devise.shared.sign_up'), new_registration_path(resource_name), class: 'py-2 px-4 bg-green-600 rounded-md w-full my-2 block' %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t('devise.shared.forgot_password'), new_password_path(resource_name), class: 'py-2 px-4 bg-green-600 rounded-md w-full my-2 block' %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('devise.shared.confirmation'), new_confirmation_path(resource_name), class: 'py-2 px-4 bg-green-600 rounded-md w-full my-2 block' %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('devise.shared.unlock'), new_unlock_path(resource_name), class: 'py-2 px-4 bg-green-600 rounded-md w-full my-2 block' %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to t('devise.shared.omni_auth', omni: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), class: 'py-2 px-4 bg-green-600 rounded-md w-full my-2 block', data: { turbo: false } %>
      <br/>
    <% end %>
  <% end %>
</div>
