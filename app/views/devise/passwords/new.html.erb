<div class='absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 p-12 bg-gray-50 rounded-xl drop-shadow-md border border-gray-200'>
  <h1 class='text-xl text-center pb-6'><%= t('devise.shared.forgot_password') %></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <div class='field'>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'mt-2 w-full p-1 border border-gray-300 rounded-md' %>
    </div>

    <div class='actions mb-6'>
      <%= f.submit t('devise.passwords.send_instructions_button'), class: 'container py-2 px-4 bg-teal-600 text-white rounded-md w-full mt-2' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
