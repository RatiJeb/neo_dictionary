<div class='absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 p-12 bg-gray-50 rounded-xl drop-shadow-md border border-gray-200'>
  <h1 class='text-xl text-center pb-6'><%= t('devise.passwords.edit.title') %></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class='field'>
      <%= f.label :password, t('devise.passwords.edit.new_password') %>
      <% if @minimum_password_length %>
        <em>(<%= t('devise.registrations.characters_minimum', length: @minimum_password_length) %>)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'my-2 w-full p-1 border border-gray-300 rounded-md' %>
    </div>

    <div class='field'>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'my-2 w-full p-1 border border-gray-300 rounded-md' %>
    </div>

    <div class='actions mb-6'>
      <%= f.submit t('devise.passwords.edit.submit'), class: 'container py-2 px-4 bg-teal-600 text-white rounded-md w-full mt-2' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
